<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="assets/style.css">
  <link rel="stylesheet" href="assets/print.css" media="print">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels@2.0.0"></script>
  <script src="https://cdn.jsdelivr.net/gh/DavidSM64/Stainless-Steel-Gauge/dist/gaugeChartPlugin.js"></script>
  <title><%= title %> | DataDragon Security</title>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&family=Roboto+Mono&display=swap">
  <style>
    /* CSS will be injected at runtime */
  </style>
</head>
<body>
  <!-- Cover Page -->
  <%- include('../components/coverPage', { 
    title, 
    dateRange, 
    organization 
  }) %>
  
  <div class="container page-break">
    <div class="main-content">
      <!-- Executive Summary -->
      <%- include('../components/executiveSummary', { data }) %>
      
      <!-- Risk Distribution Overview -->
      <%- include('../components/riskDistribution', { data }) %>
      
      <!-- Event Type Analysis -->
      <%- include('../components/eventTypeAnalysis', { data }) %>
      
      <!-- User Risk Overview -->
      <%- include('../components/userRiskOverview', { data }) %>
    </div>
  </div>
  
  <!-- Individual User Sections -->
  <% data.users.forEach(function(user) { %>
    <div class="container page-break">
      <div class="main-content">
        <%- include('../components/userDetail', { user }) %>
      </div>
    </div>
  <% }); %>
  
  <% if (options.includeAppendix) { %>
  <!-- Appendix -->
  <div class="container">
    <div class="main-content">
      <%- include('../components/appendix', { data }) %>
    </div>
  </div>
  <% } %>
  
  <!-- Print Button -->
  <button class="print-button" id="print-report" title="Print Report">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <polyline points="6 9 6 2 18 2 18 9"></polyline>
      <path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"></path>
      <rect x="6" y="14" width="12" height="8"></rect>
    </svg>
  </button>
  
  <script>
    /* JavaScript will be injected at runtime */
  </script>
</body>
</html> 